{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off"
    },
    "overrides": [
        {
            "files": ["*.spec.js"],
            "rules": {
                "quotes": ["error", "single"]
            }
        },
        {
            "files": ["*.js"],
            "excludedFiles": ["*.spec.js"],
            "rules": {
                "quotes": ["error", "double"]
            }
        } 
    ]
}
